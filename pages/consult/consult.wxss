/**index.wxss**/
.top{
  position: relative;
}

/* 搜索 */
.search{
  padding: 25rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.searchLeft{
  width: 590rpx;
  padding-left: 45rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  background-color: #FAFAFA;
  border-radius: 40rpx;
  color: #666666;
  font-size: 25rpx;
  border: 1rpx solid #E7E8E8;
}

.searchLeft view{
  margin-left: 20rpx;
}

.kefu > view{
  position: relative;
}

.kefu button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}

.kefu image{
  width: 34rpx;
  height: 33rpx;
}

.kefu view{
  color: #666666;
  font-size: 18rpx;
}

/* banner轮播图 */
.banner{
  width: 690rpx;
  height: 280rpx;
  margin: 0 auto;
}

.bannerImg{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

/* 分类列表 */
.fenlei{
  width: 690rpx;
  margin: 0 auto;
  margin-top: 25rpx;
  background-color: #fff;
  padding: 35rpx 0;
  border-radius: 11rpx;
  display: flex;
  flex-wrap: wrap;
}

.fenOne{
  width: 20%;
  flex-shrink: 0;
  text-align: center;
  font-size: 22rpx;
  color: #333333;
  margin-bottom: 35rpx;
}

.fenOne image{
  margin: 0 auto;
  width: 73rpx;
  height: 73rpx;
}

/* 为你推荐 */
.title{
  font-size: 34rpx;
  color: #333333;
  font-weight: bold;
  margin-top: 50rpx;
  padding-left: 30rpx;
  margin-bottom: 30rpx;
}

.tui .tuiOne{
  padding: 0;
}

.titleList{
  height: 80rpx;
  padding: 0 30rpx;
}

.titleAll{
  display: flex;
}

.titleOne{
  flex-shrink: 0;
  font-size: 25rpx;
  margin-right: 44rpx;
  padding-bottom: 24rpx;
  display: inline-block;
  text-align: center;
  color: #999999;
}

.titleOne.true{
  border-bottom: 4rpx solid #002247;
  color: #002247;
  font-weight: bold;
}

.tuiAll{
  padding: 0 30rpx;
  height: 740rpx;
}

.teacher{
  margin-top: 30rpx;
}

/* 本周热门 */
.hot{
  margin-top: 50rpx;
}

.hotAll{
  height: 900rpx;
}

.hotOne{
  padding-left: 30rpx;
  position: relative;
}

.bg{
  width: 100%;
  height: 100%;
}

.content{
  width: calc(100% - 30rpx);
  border-radius: 20rpx;
  padding: 40rpx 35rpx;
  position: absolute;
  top: 0;
  left: 30rpx;
}

.text1{
  font-size: 33rpx;
  font-weight: bold;
  color: #FFFFFF;
  text-align: center;
  margin-bottom: 37rpx;
}

.tea{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 143rpx;
  padding: 0 40rpx 0 28rpx;
  border-radius: 11px;
  background-color: #ffffff;
  margin-bottom: 10rpx;
}

.tea > view{
  display: flex;
  align-items: center;
}

.header{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
}

.name{
  font-size: 25rpx;
  color: #333333;
  font-weight: bold;
  margin-right: 20rpx;
}

.nums{
  font-size:24rpx;
  color: #666666;
  margin-top: 15rpx;
}

.right{
  width: 29rpx;
  height: 29rpx;
}

.wenda{
  margin-top: 50rpx;
}

.wendaOne{
  margin: 0 auto;
  margin-bottom: 25rpx;
  width: 690rpx;
}