/* 搜索 */
.container{
  height: 100%;
}

.detail{
  padding: 10rpx 25rpx 180rpx 25rpx;
}

.foot{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 25rpx;
  align-items: center;
  background-color: #fff;
}

.foot input{
  width: 286rpx;
  height: 53rpx;
  font-size: 22rpx;
  background-color: #FAFAFA;
  border-radius: 27rpx;
  padding-left: 20rpx;
}

.left3{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999999;
}

.left3 image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.left3 view{
  margin-right: 30rpx;
}

.share{
  position: relative;
  display: flex;
  align-items: center;
}

.share button{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
}