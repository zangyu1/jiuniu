.zixun{
  width: 100%;
  padding: 30rpx 27rpx 27rpx 28rpx;
  background-color: #fff;
  border-radius: 9rpx;
}

.text{
  font-size: 25rpx;
  margin-bottom: 30rpx;
  color: #333333;
}

.tea{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 91rpx;
  padding: 0 40rpx;
  border-radius: 11px;
  background-color: #FAFAFA;
}

.tea > view{
  display: flex;
  align-items: center;
}

.header{
  width:60rpx;
  height:60rpx;
  border-radius: 30rpx;
  margin-right: 25rpx;
}

.name{
  font-size:25rpx;
  color: #333333;
  font-weight: bold;
  margin-right: 20rpx;
}

.nums{
  font-size:25rpx;
  color: #666666;
}

.right{
  width: 29rpx;
  height: 29rpx;
}

.btns{
  margin-top: 25rpx;
  display: flex;
  justify-content: flex-end;
}

.btns > view{
  height: 58rpx;
  line-height: 58rpx;
  padding: 0 30rpx;
  border-radius: 29rpx;
  color: #999999;
  font-size: 25rpx;
  border: 1rpx solid #999999;
  margin-right: 19rpx;
}

.btns > view:last-child{
  color: #002247;
  border: 1rpx solid rgba(0,34,71,1);
  margin-right: 0;
}

.btns > view.kefu{
  position: relative;
}

.btns > view.kefu button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}