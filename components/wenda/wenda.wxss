.wenda{
  width: 100%;
  padding: 0 25rpx;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 11rpx;
}

.huifu{
  padding: 30rpx 0;
  border-bottom: 1rpx solid #E8EBED;
}

.huitop{
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #989898;
}

.content{
  font-size:28rpx;
  color: #333333;
  margin-top: 25rpx;
}

.top{
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.huida{
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #002247;
}

.huida image{
  width: 8rpx;
  height: 14rpx;
  margin-left: 9rpx;
}

.teacher{
  border-top: 1rpx solid #E8EBED;
}

.teacher.true{
  padding: 25rpx 0;
}

.tea{
  height: 94rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #333333;
}

.tea image{
  width: 38rpx;
  height: 38rpx;
  border-radius: 19rpx;
  margin-right: 18rpx;
}

.tea .name{
  font-size: 25rpx;
  font-weight: bold;
  color: #000000;
  margin-right: 18rpx;
}

.tea .right{
  color: #999999;
  font-size: 22rpx;
}

.content2{
  font-size: 24rpx;
  color: #000000;
  line-height: 40rpx;
}

.content2.no{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  overflow:hidden;
  -webkit-box-orient: vertical;
}

.btn{
  margin: 25rpx 0;
  font-size: 24rpx;
  color: #002247;
  font-weight: bold;
}

.bottom{
  height: 77rpx;
  font-size: 24rpx;
  color: #989898;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #E8EBED;
}

.title{
  font-size: 29rpx;
  color: #000000;
  font-weight: bold;
  width: 480rpx;
  line-height: 45rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}

.title image{
  width: 30rpx;
  height: 31rpx;
  margin-right: 6rpx;
  position: relative;
  top: 5rpx;
}

.tong{
  width:94rpx;
  height:65rpx;
  box-shadow:0px 0px 18px 0px rgba(4,0,0,0.08);
  border-radius:4px;
  font-size: 20rpx;
  text-align: center;
  color:#333333;
}

.tong text.true{
  color: #FFAB2C;
}

.jingcai{
  color: #002248;
}

.jingcai image{
  width:8rpx;
  height:16rpx;
  margin-left: 12rpx;
}

.left3{
  display: flex;
  align-items: center;
}

.left3 image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.left3 view{
  margin-right: 30rpx;
}

.huifulist{
  margin-top: 30rpx;
  background-color: #FAFAFA;
  border-radius: 10rpx;
  padding: 30rpx;
}

.list{
  display: flex;
  margin-bottom: 25rpx;
}

.list image{
  width: 28rpx;
  height: 28rpx;
  border-radius: 14rpx;
  margin-top: 5rpx;
}

.list .text{
  width: calc(100% - 80rpx);
  padding-left: 10rpx;
  font-size: 22rpx;
  color: #666666;
  line-height: 36rpx;
}

.list .del{
  font-size: 22rpx;
  color: #002247;
}

.kanfa{
  background-color: #fff;
  padding-left: 25rpx;
  border-radius: 27rpx;
  font-size: 22rpx;
  height: 53rpx;
}

.kongbai{
  height: 25rpx;
  background-color: #fff;
}

.huidale{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #333333;
}

.left3 view.share{
  margin-right: 0;
}

.share{
  position: relative;
  display: flex;
  align-items: center;
}

.share button{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
}

.time{
  padding-bottom: 30rpx;
}