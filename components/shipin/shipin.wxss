.shipin{
  width: 100%;
  background-color: #fff;
  border-radius: 10rpx;
}

video{
  width: 100%;
  height: 370rpx;
}

.title{
  margin-top: 25rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #333333;
  padding: 0 25rpx;
}

.content{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666666;
  padding: 0 25rpx;
  padding-bottom: 20rpx;
}

.bottom{
  height: 77rpx;
  font-size: 24rpx;
  color: #989898;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #E8EBED;
  padding: 0 25rpx;
}

.left3{
  display: flex;
  align-items: center;
}

.left3 image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.left3 view{
  margin-right: 30rpx;
}

.huifulist{
  background-color: #FAFAFA;
  border-radius: 10rpx;
  padding: 30rpx;
  width: 640rpx;
  margin: 0 auto;
}

.list{
  display: flex;
  margin-bottom: 25rpx;
}

.list image{
  width: 28rpx;
  height: 28rpx;
  border-radius: 14rpx;
  margin-top: 5rpx;
}

.list .text{
  width: calc(100% - 80rpx);
  padding-left: 10rpx;
  font-size: 22rpx;
  color: #666666;
  line-height: 36rpx;
}

.list .del{
  font-size: 22rpx;
  color: #002247;
}

.kanfa{
  background-color: #fff;
  padding-left: 25rpx;
  border-radius: 27rpx;
  font-size: 22rpx;
  height: 53rpx;
}

.kongbai{
  height: 25rpx;
  background-color: #fff;
}

.huidale{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #333333;
}

.share{
  position: relative;
  display: flex;
  align-items: center;
}

.share button{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
}